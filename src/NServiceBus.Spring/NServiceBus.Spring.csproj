<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452</TargetFrameworks>
    <AssemblyName>NServiceBus.ObjectBuilder.Spring</AssemblyName>
    <RootNamespace>NServiceBus.ObjectBuilder.Spring</RootNamespace>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Adapter for the Spring IoC Container</Description>
    <PackageId>NServiceBus.Spring</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="SpringDiagnostics.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spring.Core" Version="[2.0.1, 3.0.0)" />
    <PackageReference Include="NServiceBus" Version="[7.0.0, 8.0.0)" />
    <PackageReference Include="Fody" Version="3.3.5" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.6.5" PrivateAssets="All" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.1" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="0.5.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
